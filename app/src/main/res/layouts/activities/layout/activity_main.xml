<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="theme" type="night.app.data.Theme" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="night.app.activities.MainActivity"
        android:background="@{theme.secondary, default=`#f5f5f5`}"
        tools:ignore="UseAppTint, UseCompoundDrawables" >

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fr_app_page"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout="@layout/fragment_garden_page"
            app:layout_constraintBottom_toTopOf="@+id/ll_navbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout="@layout/fragment_garden_page" />

        <LinearLayout
            android:id="@+id/ll_navbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@{theme.primary, default=`#212529`}"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/btn_page_garden"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:padding="2dp"
                    android:tint="@{theme.onPrimary, default=`#fff`}"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_tab_garden" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/garden"
                    android:textAlignment="center"
                    android:textColor="@{theme.onPrimary, default=`#fff`}"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_page_clock"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:padding="2dp"
                    android:tint="@{theme.onPrimaryVariant, default=`#61666a`}"
                    app:srcCompat="@drawable/ic_tab_clock" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/clock"
                    android:textAlignment="center"
                    android:textColor="@{theme.onPrimary, default=`#fff`}"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_page_analysis"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:padding="2dp"
                    android:tint="@{theme.onPrimaryVariant, default=`#61666a`}"
                    app:srcCompat="@drawable/ic_tab_analysis" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center|center_vertical"
                    android:text="Analytics"
                    android:textAlignment="center"
                    android:textColor="@{theme.onPrimary, default=`#fff`}"
                    android:textSize="11sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_page_settings"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="TouchTargetSizeCheck">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:padding="2dp"
                    android:tint="@{theme.onPrimaryVariant, default=`#61666a`}"
                    app:srcCompat="@drawable/ic_tab_settings" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="@string/settings"
                    android:textAlignment="center"
                    android:textColor="@{theme.onPrimary, default=`#fff`}"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>