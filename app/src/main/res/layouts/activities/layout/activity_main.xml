<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="night.app.activities.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fr_app_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_navbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_navbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#212529"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/btn_page_garden"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:onClick="switchPage"
            android:paddingTop="2dp"
            android:text="@string/garden"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_tab_garden"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/btn_page_clock"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_weight="1"
            android:onClick="switchPage"
            android:paddingTop="2dp"
            android:text="@string/clock"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_tab_clock"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/btn_page_analysis"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_weight="1"
            android:onClick="switchPage"
            android:paddingTop="2dp"
            android:text="@string/analysis"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_tab_analysis"
            tools:ignore="touch,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/btn_page_settings"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:onClick="switchPage"
            android:paddingTop="2dp"
            android:text="@string/settings"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="11sp"
            app:drawableTopCompat="@drawable/ic_tab_settings"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>