<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="theme" type="night.app.data.entities.Theme" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:compoundDrawableTintList="@{theme.onPrimaryVColorStateList}"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="PERMISSION"
            android:textColor="@{theme.onPrimaryVariant}"
            android:textSize="11sp"
            tools:textColor="#61666a" />

        <Button
            android:id="@+id/btn_permission"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="left|center_vertical"
            android:paddingHorizontal="5dp"
            android:paddingVertical="12dp"
            android:text="Manual configuration"
            android:textAllCaps="false"
            android:textColor="@{theme.onSurface}"
            android:textSize="16sp"
            tools:textColor="#000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:compoundDrawableTintList="@{theme.onPrimaryVColorStateList}"
            android:drawableStart="@drawable/ic_handshake"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="AGREEMENTS"
            android:textColor="@{theme.onPrimaryVariant}"
            android:textSize="11sp"
            tools:textColor="#61666a" />


        <Button
            android:id="@+id/btn_open_term"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="left|center_vertical"
            android:paddingHorizontal="5dp"
            android:paddingVertical="12dp"
            android:text="Terms of Use"
            android:textAllCaps="false"
            android:textColor="@{theme.onSurface}"
            android:textSize="16sp"
            tools:textColor="#000" />

        <Button
            android:id="@+id/btn_open_policy"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableRight="@drawable/ic_chevron_right"
            android:gravity="left|center_vertical"
            android:paddingHorizontal="5dp"
            android:paddingVertical="12dp"
            android:text="Privacy Policy"
            android:textAllCaps="false"
            android:textColor="@{theme.onSurface}"
            android:textSize="16sp"
            tools:textColor="#000" />

    </LinearLayout>
</layout>