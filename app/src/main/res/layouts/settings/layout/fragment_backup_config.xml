<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@string/backup_status"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:minHeight="48dp"
                    android:text="@string/last_backup"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_sett_backup_last_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:text="2023/02/01 23:45:23" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@string/backup_option"
                android:textSize="11sp" />

            <Switch
                android:id="@+id/btn_sett_backup_opt_sleep"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="5dp"
                android:checked="false"
                android:showText="false"
                android:text="Sleep data"
                android:textSize="16sp"
                tools:checked="false" />

            <Switch
                android:id="@+id/btn_sett_backup_opt_alarm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="5dp"
                android:checked="false"
                android:showText="false"
                android:text="Alarm list"
                android:textSize="16sp"
                tools:checked="false" />

            <Switch
                android:id="@+id/btn_sett_backup_opt_dream"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginVertical="5dp"
                android:checked="false"
                android:showText="false"
                android:text="Dream record"
                android:textSize="16sp"
                tools:checked="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@string/automatically_backup"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical"
                android:text="@string/frequency"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="@string/action"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btn_sett_backup_act_upload"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginVertical="5dp"
                android:text="@string/backupCapital" />

            <Button
                android:id="@+id/btn_sett_backup_act_recovery"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginVertical="5dp"
                android:text="@string/recovery" />

            <Button
                android:id="@+id/btn_sett_backup_act_del"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginVertical="5dp"
                android:text="@string/delete_data" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>