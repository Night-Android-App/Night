<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="theme" type="night.app.data.Theme" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:text="PERMISSION"
            android:textColor="@{theme.onPrimaryVariant, default=`#61666a`}"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Manual configuration"
                android:textColor="@{theme.onSurface, default=`#000`}"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_permission"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:backgroundTint="@{theme.accent, default=`#441E9F`}"
                android:gravity="center"
                android:text="PROCEED" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="5dp"
            android:text="AGREEMENTS"
            android:textColor="@{theme.onPrimaryVariant, default=`#61666a`}"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Terms of Service"
                android:textColor="@{theme.onSurface, default=`#000`}"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_open_term"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:backgroundTint="@{theme.accent, default=`#441E9F`}"
                android:gravity="center"
                android:text="READ" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Privacy policy"
                android:textColor="@{theme.onSurface, default=`#000`}"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_open_policy"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:backgroundTint="@{theme.accent, default=`#441E9F`}"
                android:gravity="center"
                android:text="READ" />

        </LinearLayout>

    </LinearLayout>
</layout>