<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_shop_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Theme name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#781C1C"
        tools:clipChildren="true">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:background="#212529"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="9.6dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="4.8dp">

                    <TextView
                        android:id="@+id/tab_anal_day"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="4.8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Day"
                        android:textAlignment="gravity"
                        android:textColor="#E9ECEF"
                        android:textSize="6sp" />

                    <TextView
                        android:id="@+id/tab_anal_week"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="4.8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Week"
                        android:textAlignment="gravity"
                        android:textColor="#E9ECEF"
                        android:textSize="6sp" />

                    <TextView
                        android:id="@+id/tab_anal_month"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="4.8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Month"
                        android:textAlignment="gravity"
                        android:textColor="#E9ECEF"
                        android:textSize="6sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9.6sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="9.6dp"
                    android:gravity="center"
                    android:text="15 November 2023"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="7sp" />

                <LinearLayout
                    android:id="@+id/ll_analysis_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="9.6dp"
                    android:minHeight="96dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="7.2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_anal_main_score_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom|center_horizontal"
                            android:text="80"
                            android:textColor="#ffffff"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/tv_anal_main_score_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:gravity="center_horizontal|top"
                            android:text="@string/score"
                            android:textColor="#5e6a75"
                            android:textSize="5sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="12dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_anal_main_info_data1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="23:49"
                                android:textColor="#ffffff"
                                android:textSize="7sp" />

                            <TextView
                                android:id="@+id/tv_anal_main_info_title1"
                                android:layout_width="match_parent"
                                android:layout_height="12dp"
                                android:text="@string/sleep_start"
                                android:textColor="#5e6a75"
                                android:textSize="5sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="6dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_anal_main_info_data2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="23:49"
                                android:textColor="#ffffff"
                                android:textSize="7sp" />

                            <TextView
                                android:id="@+id/tv_anal_main_info_title2"
                                android:layout_width="match_parent"
                                android:layout_height="12dp"
                                android:text="@string/sleep_end"
                                android:textColor="#5e6a75"
                                android:textSize="5sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="9.6dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_vertical"
                    android:text="Statistics"
                    android:textSize="8.4sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="9.6dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="2.4dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:gravity="center"
                            android:text="@string/not_applicable"
                            android:textSize="8sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|top"
                            android:text="FELL ASLEEP"
                            android:textSize="5sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="2.4dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:gravity="center"
                            android:text="@string/not_applicable"
                            android:textSize="8sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|top"
                            android:text="DEEP SLEEP"
                            android:textSize="5sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="2.4dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:gravity="center"
                            android:text="@string/not_applicable"
                            android:textSize="8sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal|top"
                            android:text="IN BED"
                            android:textSize="5sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_vertical"
                    android:text="Sleep Confidence"
                    android:textSize="8.4dp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="-180dp"
            android:background="@drawable/view_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="-180dp"
            android:background="@drawable/view_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_shop_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="30C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_shop_item_purchase"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_shop_item_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="PURCHASE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>